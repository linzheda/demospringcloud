<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linzd.backsystem.core.sysparam.mapper.SysParamMapper">

    <!-- 开启二级缓存 -->
   <!-- <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>-->

    <!--查询系统参数列表-->
    <select id="getSysParamList" resultType="java.util.Map">
        select t.*,d.name status_text
        from sys_param t
        left join dictionary d on t.status=d.value and d.dictkey='able_disable' and d.level=2
        <where>
            <if test="condition.name!=null">
                 t.name like concat('%',#{condition.name},'%')
            </if>
            <if test="condition.code!=null">
                and t.code like concat('%',#{condition.code},'%')
            </if>
        </where>
        order by t.seq
    </select>

</mapper>
